		},
		{
			"name": "2. Ler Dados (Capturar IDs)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"// Verifica se existem perguntas e opções",
							"if (jsonData.questions && jsonData.questions.length > 0) {",
							"    var firstQuestion = jsonData.questions[0];",
							"    ",
							"    // Salva o ID da Pergunta",
							"    pm.environment.set(\"questionId\", firstQuestion.id);",
							"    ",
							"    if (firstQuestion.options && firstQuestion.options.length > 0) {",
							"        // Salva o ID da primeira Opção (.NET Core)",
							"        pm.environment.set(\"optionId\", firstQuestion.options[0].id);",
							"        console.log(\"IDs capturados para voto.\");",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{baseUrl}}/api/surveys/{{surveyId}}/report"
			},
			"response": []
		},
		{
