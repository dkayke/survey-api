{
	"info": {
		"_postman_id": "b3e54366-4113-4a11-8255-099525424558",
		"name": "Survey System API",
		"description": "Fluxo de teste automatizado para o Sistema de Enquetes.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Criar Pesquisa",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Captura o ID da pesquisa criada e salva na variável de ambiente",
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"surveyId\", jsonData.id);",
							"console.log(\"Pesquisa Criada ID: \" + jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"title\": \"Pesquisa Postman Automatizada\",\r\n  \"description\": \"Testando fluxo completo via script\",\r\n  \"questions\": [\r\n    {\r\n      \"text\": \"Qual framework backend você prefere?\",\r\n      \"options\": [\r\n        \".NET Core\",\r\n        \"Spring Boot\",\r\n        \"Django\"\r\n      ]\r\n    }\r\n  ]\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/surveys",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"surveys"
					]
				}
			}
		},
		{
			"name": "2. Ler Dados (Capturar IDs)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"// Verifica se existem perguntas e opções",
							"if (jsonData.questions && jsonData.questions.length > 0) {",
							"    var firstQuestion = jsonData.questions[0];",
							"    ",
							"    // Salva o ID da Pergunta",
							"    pm.environment.set(\"questionId\", firstQuestion.id);",
							"    ",
							"    if (firstQuestion.options && firstQuestion.options.length > 0) {",
							"        // Salva o ID da primeira Opção (.NET Core)",
							"        pm.environment.set(\"optionId\", firstQuestion.options[0].id);",
							"        console.log(\"IDs capturados para voto.\");",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/surveys/{{surveyId}}/report",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"surveys",
						"{{surveyId}}",
						"report"
					]
				}
			}
		},
		{
			"name": "3. Votar",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"questionId\": \"{{questionId}}\",\r\n  \"optionId\": \"{{optionId}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/surveys/{{surveyId}}/vote",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"surveys",
						"{{surveyId}}",
						"vote"
					]
				}
			}
		},
		{
			"name": "4. Conferir Resultado",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/surveys/{{surveyId}}/report",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"surveys",
						"{{surveyId}}",
						"report"
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		}
	]
}